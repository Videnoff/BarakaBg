@using BarakaBg.Common
@model BarakaBg.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="css/HighChartDemo/index.css"/>
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-md-4 offset-md-4">
        <p>We have:</p>
        <ul class="list-group">
            <li class="list-group-item bg-info">Products: @Model.ProductsCount</li>
            <li class="list-group-item bg-light">Categories: @Model.CategoriesCount</li>
            <li class="list-group-item bg-info">Images: @Model.ImagesCount</li>
            <li class="list-group-item bg-light">Ingredients: @Model.IngredientsCount</li>
        </ul>
    </div>
</div>

<div class='buttons'>
    <button id='2000'>
        2000
    </button>
    <button id='2004'>
        2004
    </button>
    <button id='2008'>
        2008
    </button>
    <button id='2012'>
        2012
    </button>
    <button id='2016' class='active'>
        2016
    </button>
</div>
<div id="container"></div>

@section Scripts
{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    
    <script src="js/HighChartDemo/index.js"></script>
}
