@model BarakaBg.Web.ViewModels.Products.ProductRatingViewModel

<ul class="list-unstyled list-inline fav">
    @for (var i = 1; i <= 5; i++)
    {
        if (i <= Model.AverageVoteRounded)
        {
            <li class="list-inline-item">
                <i class="fa fa-star"></i>
            </li>
        }
        else
        {
            var difference = i - Model.AverageVoteRounded;
            if (difference != 0 && difference < 1)
            {
                <li class="list-inline-item"><i class="fa fa-star-half-alt"></i></li>
            }
            else
            {
                <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
            }
        }
    }
    <li class="list-inline-item"><a href="#">( @Model.AverageVote.ToString("F") )</a></li>
</ul>
