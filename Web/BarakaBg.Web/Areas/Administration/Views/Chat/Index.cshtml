@{
    this.ViewData["Title"] = "Chat";
}

<div class="chat-container">
    <h3 class=" text-center">
        Messaging
    </h3>
    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4>
                            Rooms
                        </h4>
                    </div>
                </div>
                <div class="inbox_chat">

                </div>
            </div>
            <div class="mesgs">
                <div class="msg_history">

                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <form>
                            <input type="text" class="write_msg" placeholder="Type a message" />
                            <button class="msg_send_btn" type="submit">
                                <i class="fa fa-paper-plane-o" aria-hidden="true">

                                </i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.min.js" asp-append-version="true"></script>
    <script src="~/js/chat-admin.js" asp-append-version="true"></script>
}
